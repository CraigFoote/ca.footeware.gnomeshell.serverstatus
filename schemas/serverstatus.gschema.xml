<?xml version="1.0" encoding="UTF-8"?>
<schemalist>

    <schema id="org.gnome.shell.extensions.serverstatus" path="/org/gnome/shell/extensions/serverstatus/">
        <key type="s" name="url">
            <default>"http://footeware.ca"</default>
            <summary>URL to poll</summary>
            <description>[http|https]://host[:port][/path]</description>
        </key>
        <key type="i" name="frequency">
            <default>60</default>
            <summary>Poll frequency</summary>
            <description>How often the URL is called.</description>
        </key>
        <key type="b" name="is-get">
            <default>false</default>
            <summary>Whether or not HTTP GET is used</summary>
            <description>If not GET then assume HEAD is used.</description>
        </key>
    </schema>
    
</schemalist>
